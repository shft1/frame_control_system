{
  "info": {
    "name": "Frame Control System API",
    "_postman_id": "6c5e2a3f-0000-4000-8000-aaaaaaaaaaaa",
    "description": "Postman collection for Frame Control System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/healthz"
      }
    },
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"u1@example.com\",\n  \"password\": \"secret12\",\n  \"name\": \"User One\"\n}"
        },
        "url": "{{baseUrl}}/users/register"
      }
    },
    {
      "name": "Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 200\", function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.environment.set(\"token\", json.data.token);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"u1@example.com\",\n  \"password\": \"secret12\"\n}"
        },
        "url": "{{baseUrl}}/users/login"
      }
    },
    {
      "name": "Me (GET)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/users/me"
      }
    },
    {
      "name": "Me (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"User One Updated\"\n}"
        },
        "url": "{{baseUrl}}/users/me"
      }
    },
    {
      "name": "Create order",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"status 201\", function () { pm.response.to.have.status(201); });",
              "pm.environment.set(\"orderId\", pm.response.json().data.id);"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    { \"name\": \"item1\", \"quantity\": 2, \"price\": 10 }\n  ]\n}"
        },
        "url": "{{baseUrl}}/orders"
      }
    },
    {
      "name": "Get order",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/orders/{{orderId}}"
      }
    },
    {
      "name": "List orders",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/orders?limit=10&page=1&sort=created_desc"
      }
    },
    {
      "name": "Set status -> in_progress",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"status\": \"in_progress\" }"
        },
        "url": "{{baseUrl}}/orders/{{orderId}}/status"
      }
    },
    {
      "name": "Set status -> done",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"status\": \"done\" }"
        },
        "url": "{{baseUrl}}/orders/{{orderId}}/status"
      }
    },
    {
      "name": "Cancel order",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/orders/{{orderId}}"
      }
    },
    {
      "name": "Admin users list",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": "{{baseUrl}}/users?limit=10&page=1"
      }
    },
    {
      "name": "Admin outbox",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": "{{baseUrl}}/events/outbox?limit=50"
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api/v1" },
    { "key": "token", "value": "" },
    { "key": "adminToken", "value": "" },
    { "key": "orderId", "value": "" }
  ]
}


